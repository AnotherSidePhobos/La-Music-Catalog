@model LaMusicCatalog.Models.ViewModels.RegisterViewModel

<div class="container">
    <div class="RegSec">
        <div class="container__inner">
            <h1 title="Register form">Register</h1>
            <form method="post" asp-action="Register" asp-controller="Account">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="group">
                    <label id="emailLb" asp-for="Name">Name</label>
                    <input id="emailInput" asp-for="Name" type="text">
                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>
                <div class="group">
                    <label id="emailLb" asp-for="Email">Email</label>
                    <input id="emailInputReg" asp-for="Email" type="email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="group">
                    <label id="emailLb" asp-for="Password">Password</label>
                    <input id="PassInputReg" asp-for="Password" type="password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="group">
                    <label id="emailLb" asp-for="ConfirmPassword">Confirm Password</label>
                    <input id="PassInputRegConf" asp-for="ConfirmPassword" type="password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div id="RemMe">
                    <input type="submit" value="Sign up" class="btn btn-success" />
                </div>
            </form>
            <div id="RemMe" class="aSingIn">
                <a asp-action="Login">Sign In</a>
            </div>
        </div>
    </div>



    @section Scripts{
        <partial name="_ValidationScriptsPartial" />

    }
</div>