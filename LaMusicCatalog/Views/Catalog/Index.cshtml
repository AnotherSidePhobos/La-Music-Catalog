@model ReflectionIT.Mvc.Paging.PagingList<LaMusicCatalog.Models.MusicItem>
@using ReflectionIT.Mvc.Paging
@addTagHelper*,ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <nav class="paginationNav">
        @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
    </nav>
</div>
<div id="wrapper">
    <div id="sidebarLeft">
        <label for="filter-input">Search: </label>
        <input type="text" id="filter-input" placeholder="Start writing the song title">
    </div>

    <div id="centerBox">
        <table class="table  table-condensed">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="filter_items">
                        <td>
                            <a asp-controller="Catalog" asp-action="Detail" asp-route-id="@item.Id">
                                <img class="imgPict" src="@item.ImageUrl" />
                            </a>
                        </td>

                        <td>@item.Title</td>
                        <td>@item.Author</td>
                        <td>@item.Date</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div id="sidebarRight">
