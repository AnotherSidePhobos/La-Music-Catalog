@using ReflectionIT.Mvc.Paging
@model ReflectionIT.Mvc.Paging.PagingList<LaMusicCatalog.Models.MusicItem>

@{
    ViewData["Title"] = "Index";
}
<h1 style="text-align:center">This is your favorite music items</h1>

<div class="container">
    <nav class="paginationNav">
        @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
    </nav>
</div>

<div id="wrapper">
    <div id="sidebarLeft">
    </div>
    <div id="centerBox">
        <table class="table  table-condensed">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Date</th>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-controller="Catalog" asp-action="Detail" asp-route-id="@item.Id">
                                <img class="imgPict" src="@item.ImageUrl" />
                            </a>
                        </td>
                        <td>@item.Title</td>
                        <td>@item.Author</td>
                        <td>@item.Date</td>
                        <td><a asp-controller="PersonalArea" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-info">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div id="sidebarRight">

    </div>
</div>